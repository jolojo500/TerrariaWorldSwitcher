<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.Views.WorldDetailsView">
    
    <Grid RowDefinitions="Auto,*" Margin="30,20">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="20" Margin="0,0,0,30">
            <Button Content="â† Back" 
                    Click="OnBackClicked"
                    Width="90"
                    HorizontalAlignment="Left"/>
            
            <StackPanel Spacing="8">
                <TextBlock x:Name="WorldNameText" 
                           FontSize="36" 
                           FontWeight="Bold"
                           Foreground="#FFFFFF"/>
                
                <TextBlock x:Name="WorldInfoText"
                           FontSize="14"
                           Opacity="0.6"/>
            </StackPanel>
        </StackPanel>
        
        <!--Main zone centered -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="24"
                    Width="500">
            
            <!-- Status card -->
            <Border Classes="card"
                    Padding="32">
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸš€ Transfer Hosting" 
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#FFFFFF"/>
                    
                    <TextBlock x:Name="StatusText"
                               Text="Ready to transfer"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="14"
                               Opacity="0.8"/>
                    
                    <!--ip box -->
                    <Border x:Name="IpBox"
                            IsVisible="False"
                            Background="#1E1E1E"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,8,0,0">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Share this IP with the client:"
                                       FontSize="12"
                                       Opacity="0.6"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="IpText"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Progress -->
                    <StackPanel x:Name="ProgressPanel" 
                                IsVisible="False"
                                Spacing="8"
                                Margin="0,8,0,0">
                        <ProgressBar x:Name="TransferProgress"
                                     Height="8"
                                     CornerRadius="4"/>
                        <TextBlock x:Name="ProgressText"
                                   HorizontalAlignment="Center"
                                   FontSize="13"
                                   Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!--Transfer Button -->
            <Button x:Name="TransferButton"
                    Content="Start Transfer (Host Mode)"
                    Click="OnTransferHostClicked"
                    Classes="primary"
                    HorizontalAlignment="Stretch"
                    Height="56"
                    FontSize="16"/>
            
        </StackPanel>
        
    </Grid>
</UserControl>