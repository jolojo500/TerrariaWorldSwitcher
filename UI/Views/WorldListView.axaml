<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:UI.Models"
             x:Class="UI.Views.WorldListView">
    
    <Grid RowDefinitions="Auto,*" Margin="30,20">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,30">
            <TextBlock Text="ðŸ—ºï¸ Your Terraria Worlds" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF"/>
            <TextBlock Text="Select a world to manage or transfer hosting"
                       FontSize="14"
                       Opacity="0.6"/>
        </StackPanel>

        <!-- World List -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="WorldsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:WorldDisplayInfo">
                        <!-- Card for each world -->
                       <Border Classes="card"
                                Padding="24"
                                Margin="0,0,0,16"
                                Cursor="Hand">
                            
                            <Border.Styles>
                                <Style Selector="Border:pointerover">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                </Style>
                            </Border.Styles>
                            
                            <Grid ColumnDefinitions="*,Auto">
                                
                                <!-- world info -->
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               Foreground="#FFFFFF"/>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="ðŸ“¦" FontSize="14"/>
                                            <TextBlock Text="{Binding SizeFormatted}"
                                                       FontSize="13"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="ðŸ•’" FontSize="14"/>
                                            <TextBlock Text="{Binding LastModified}"
                                                       FontSize="13"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- IcÃ´ne flÃ¨che -->
                                <TextBlock Grid.Column="1"
                                           Text="â†’"
                                           FontSize="28"
                                           VerticalAlignment="Center"
                                           Opacity="0.4"
                                           Margin="20,0,0,0"/>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
</UserControl>